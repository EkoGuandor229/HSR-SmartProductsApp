<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="shoppingCartViewModel"
            type="ch.hsr.wing.smartproducts.smartproductbrowser.viewmodels.ShoppingCartViewModel" />
    </data>

<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".smartproductbrowser.views.ShoppingCartFragment">
    <ImageView
        style="@style/BackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_shopping_cart"
        />
    <GridLayout
        android:paddingVertical="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3">
        <TextView
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="2"
            android:layout_row="0"
            />
        <ListView
            android:id="@+id/cart_items"
            android:layout_gravity="fill"
            android:layout_columnSpan="2"
            android:layout_row="1"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:text="@string/total_amount"
            android:layout_gravity="fill_horizontal"
            style="@style/TotalAmountTextStyle"
            />
        <TextView
            android:layout_width="160dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="right"
            style="@style/TotalAmountTextStyle"
            android:layout_marginEnd="20dp"
            android:text="@{shoppingCartViewModel.totalAmount}"/>

    </GridLayout>


</FrameLayout>
</layout>